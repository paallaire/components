.tab-list {
  display: flex;
}

.tab {
  padding: 10px;
  cursor: pointer;
  border: 1px solid #ccc;
  background-color: #f0f0f0;
}

.tab[aria-selected="true"] {
  background-color: #fff;
  font-weight: bold;
  border-bottom: 1px solid #fff;
}


.tab-content {
  display: none;

  &.is-active {
    display: block;
  }
}
